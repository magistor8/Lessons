<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/purple_200"
    android:padding="10sp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageButton
        android:id="@+id/search"
        android:layout_width="@dimen/imageButtonAv"
        android:layout_height="@dimen/imageButtonAv"
        android:background="@null"
        android:contentDescription="@string/_123"
        android:scaleType="fitCenter"
        android:src="@drawable/av"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_navigation"
        android:textSize="@dimen/nav_header_dimen"/>

</LinearLayout>